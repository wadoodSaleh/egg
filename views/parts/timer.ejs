<%console.log("Rendering timer for recipe:", recipe);%>
  <div id="timerArea" data-cook="<%= recipe.cook_minutes %>" data-lose="<%= recipe.losing_minute %>">

    <iframe id="animationFrame" src="/animations/<%= recipe.animation %>"></iframe>

    <div id="timerControls" style="display:flex;gap:8px;align-items:center;">
      <button id="startBtn" aria-label="Start" title="Start" style="width:40px;height:40px;">
        <!-- Play icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 5v14l11-7z" />
        </svg>
      </button>

      <button id="pauseBtn" aria-label="Pause" title="Pause" style="width:40px;height:40px;">
        <!-- Pause icon -->
        <svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z" />
        </svg>
      </button>

      <button id="stopBtn" aria-label="Stop" title="Stop" style="width:40px;height:40px;">
        <!-- Stop icon -->
        <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M6 6h12v12H6z" />
        </svg>
      </button>
    </div>

    <p id="timer">00:00</p>

    <!-- Lose Popup -->
    <div id="losePopup" style="display:none;">
      <%- include("lose") %>
    </div>

  </div>

  <script src="/timer.js"></script>