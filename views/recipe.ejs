<!DOCTYPE html>
<%- include('parts/header', { pageName: recipe.name , pageTitle: recipe.name, bodyClass: 'body_recipe'}) %>

    <h2>Ingredients</h2>
    <ul>
      <% recipe.ingredients.forEach(item=> { %>
        <li>
          <%= item %>
        </li>
        <% }) %>
    </ul>

    <h2>Instructions</h2>
    <ol>
      <% recipe.instructions.forEach(step=> { %>
        <li>
          <%= step %>
        </li>
        <% }) %>
    </ol>

    <!-- Timer -->
    <%- include("parts/timer", { recipe }) %>

  <%- include('parts/footer') %>

    </html>